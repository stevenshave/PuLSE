CXX = @CXX@
ccopt = @CXXFLAGS@

all: pulse pulse-test pulse-BuildFakeDataset
pulse: src/PuLSE.cpp
	$(CXX) -o $@ $^ $(libs) $(ccopt)
pulse-test: PuLSE-Test/PuLSE-test.cpp
	$(CXX) -o $@ $^ $(libs) $(ccopt)
pulse-BuildFakeDataset: PuLSE-BuildFakeDataset/PuLSE-BuildFakeDataset.cpp
	$(CXX) -o $@ $^ $(libs) $(ccopt)


.PHONY: clean
clean:
	/bin/rm -f *.o  pulse pulse-test pulse-BuildFakeDataset

.PHONY: install
install:
	cp pulse /usr/local/bin/
